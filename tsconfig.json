{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true
  }
}
